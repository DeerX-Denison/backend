{
	"name": "functions",
	"main": "lib/src/index.js",
	"scripts": {
		"dev": "tsc -w | firebase emulators:start",
		"test:integration": "tsc && firebase emulators:exec ./tests/test.sh",
		"build": "tsc",
		"predeploy": "firebase functions:config:unset env && firebase functions:config:set env=\"$(cat ./src/secrets.json)\"",
		"postdeploy": "node env2secrets.js",
		"deploy": "firebase deploy --only functions",
		"logs": "firebase functions:log",
		"lint": "eslint \"src/**/*.ts\"",
		"format": "yarn prettier --write \"src/**/*.ts\"",
		"bin:get-tester-token-id": "node ./bin/get-tester-token-id.mjs"
	},
	"engines": {
		"node": "16"
	},
	"dependencies": {
		"@firebase/app-compat": "^0.1.17",
		"@firebase/app-types": "^0.7.0",
		"@firebase/auth-interop-types": "^0.1.6",
		"@firebase/util": "^1.4.3",
		"@google-cloud/vision": "^2.4.2",
		"@sendgrid/mail": "^7.6.2",
		"@types/cors": "^2.8.12",
		"@types/jest": "^27.4.0",
		"@types/module-alias": "^2.0.1",
		"@types/node": "^18.14.1",
		"@types/sharp": "^0.29.5",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.12.0",
		"@typescript-eslint/parser": "^5.12.0",
		"commander": "^10.0.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"eslint": "^8.9.0",
		"eslint-config-google": "^0.14.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jest": "^26.1.0",
		"firebase-admin": "^11.5.0",
		"firebase-functions": "^4.2.1",
		"firebase-functions-test": "^3.0.0",
		"jest": "^29.4.3",
		"module-alias": "^2.2.2",
		"pre-commit": "^1.2.2",
		"sharp": "^0.30.1",
		"stripe": "^8.202.0",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.5.0",
		"typescript": "^4.5.5",
		"uuid": "^8.3.2",
		"zod": "^3.18.0"
	},
	"devDependencies": {
		"firebase": "^9.9.3",
		"inquirer": "^9.1.0",
		"prettier": "^2.5.1",
		"prettier-plugin-organize-imports": "^2.3.4"
	},
	"private": true
}
