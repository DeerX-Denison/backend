{
	"name": "functions",
	"main": "lib/src/index.js",
	"scripts": {
		"dev": "tsc -w | firebase emulators:start",
		"test": "jest",
		"test:watch": "jest --watchAll",
		"build": "tsc",
		"predeploy": "firebase functions:config:unset env && firebase functions:config:set env=\"$(cat ./src/secrets.json)\"",
		"postdeploy": "node env2secrets.js",
		"deploy": "firebase deploy --only functions",
		"logs": "firebase functions:log",
		"lint": "eslint \"src/**/*.ts\"",
		"format": "yarn prettier --write \"src/**/*.ts\""
	},
	"engines": {
		"node": "14"
	},
	"dependencies": {
		"@firebase/app-compat": "^0.1.17",
		"@firebase/app-types": "^0.7.0",
		"@firebase/auth-interop-types": "^0.1.6",
		"@firebase/util": "^1.4.3",
		"@google-cloud/vision": "^2.4.2",
		"@types/cors": "^2.8.12",
		"@types/jest": "^27.4.0",
		"@types/node": "^17.0.18",
		"@types/sharp": "^0.29.5",
		"@typescript-eslint/eslint-plugin": "^5.12.0",
		"@typescript-eslint/parser": "^5.12.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"eslint": "^8.9.0",
		"eslint-config-google": "^0.14.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jest": "^26.1.0",
		"firebase-admin": "^9.8.0",
		"firebase-functions": "^3.14.1",
		"firebase-functions-test": "^0.3.3",
		"jest": "^27.5.1",
		"pre-commit": "^1.2.2",
		"sharp": "^0.30.1",
		"stripe": "^8.202.0",
		"ts-jest": "^27.1.3",
		"ts-node": "^10.5.0",
		"typescript": "^4.5.5"
	},
	"devDependencies": {
		"prettier": "^2.5.1",
		"prettier-plugin-organize-imports": "^2.3.4"
	},
	"private": true
}
